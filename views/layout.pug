doctype html
html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title=appname
  body
    include header.pug
    if flashMsg && flashMsg.length
      .bg-orange-100.border-t-4.border-orange-500.rounded-b.text-orange-900.px-4.py-3.m-auto.shadow-md.max-w-md(
        role='alert'
      )
        .flex
          .py-1
            <svg class="fill-current h-6 w-6 text-orange-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg>
          div
            p.font-bold #{flashMsgType || 'Authentication'} Error
            each msg in flashMsg
              p.text-sm #{msg}
    block content
