mixin _text_field({ name, value='', placeholder='', type=undefined, isRequired=true, minLength=null })
  label(
    for=name
    class="block text-gray-700 text-sm font-bold mb-2 capitalize"
  ) #{name}
  if type==='textarea'
    textarea(
      class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
      name=name,
      value=value,
      placeholder=placeholder
      required=isRequired
    )
  else
    input(
      class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
      type=type || 'text'
      name=name
      value=value
      placeholder=placeholder
      required=isRequired
      min=minLength
    )